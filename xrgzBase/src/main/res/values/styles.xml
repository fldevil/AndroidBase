<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppBaseTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- 应用亮色调，标题栏默认颜色 -->
        <item name="colorPrimary">@color/color_primary</item>
        <!-- 应用暗色调，状态栏默认颜色 -->
        <item name="colorPrimaryDark">@color/color_primary_dark</item>
        <!-- 控件选中颜色 -->
        <item name="colorAccent">@color/color_accent</item>
        <!-- 控件按压颜色 -->
        <item name="colorControlHighlight">@color/color_control_highlight</item>
        <!-- 按钮颜色 -->
        <item name="colorButtonNormal">@color/button_color</item>
        <!-- 字体颜色 -->
        <item name="android:textColor">@color/text_color</item>
        <!-- 标题文字的颜色 -->
        <item name="android:textColorPrimary">@color/text_color</item>
        <!-- 背景颜色 -->
        <item name="android:windowBackground">@color/window_color</item>
        <!-- 字体允许小写 -->
        <item name="android:textAllCaps">false</item>
        <!-- 整体跳转动画 -->
        <!--<item name="android:windowAnimationStyle">@style/mAnimation</item>-->
    </style>

    <!-- activity跳转动画  也可在BaseActivity中初始化 -->
    <style name="mAnimation" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/slide_right_in</item>
        <item name="android:activityOpenExitAnimation">@anim/slide_left_out</item>
        <item name="android:activityCloseEnterAnimation">@anim/slide_left_in</item>
        <item name="android:activityCloseExitAnimation">@anim/slide_right_out</item>
    </style>

    <!-- AppBarLayout(android:theme里加,可调整字体颜色)-->
    <style name="appBarStyle" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <!-- ToolBarLayout(上面加了,这里可以不加) -->
    <style name="toolBarStyle" parent="ThemeOverlay.AppCompat.Light"/>

    <!-- 自定义对话框样式 -->
    <style name="DialogCustom" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item><!--边框-->
        <item name="android:windowNoTitle">true</item><!--无标题-->
        <item name="android:windowIsFloating">true</item><!--是否浮现在activity之上-->
        <item name="android:windowBackground">@color/trans</item><!--背景透明-->
        <item name="android:windowIsTranslucent">false</item><!--半透明-->
        <item name="android:backgroundDimEnabled">false</item><!--模糊-->
    </style>

    <style name="DialogIOS" parent="DialogCustom">
        <item name="android:windowBackground">@drawable/shape_dialog_ios_bg</item>
    </style>

    <!-- 自定义loading -->
    <style name="DialogMyLoading" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:background">@null</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <!-- 横线 -->
    <style name="mLineHorizontal">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1px</item>
        <item name="android:background">@color/line_gray</item>
    </style>

    <!-- 竖线 -->
    <style name="mLineVertical">
        <item name="android:layout_width">1px</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/line_gray</item>
    </style>

    <!-- 黑色字体 -->
    <style name="FontBlackSmall">
        <item name="android:textColor">@color/font_black</item>
        <item name="android:textSize">@dimen/font_small</item>
    </style>

    <style name="FontBlackNormal">
        <item name="android:textColor">@color/font_black</item>
        <item name="android:textSize">@dimen/font_normal</item>
    </style>

    <style name="FontBlackBig">
        <item name="android:textColor">@color/font_black</item>
        <item name="android:textSize">@dimen/font_big</item>
    </style>

    <style name="FontBlackHuge">
        <item name="android:textColor">@color/font_black</item>
        <item name="android:textSize">@dimen/font_huge</item>
    </style>

    <!-- 白色字体 -->
    <style name="FontWhiteSmall">
        <item name="android:textColor">@color/font_white</item>
        <item name="android:textSize">@dimen/font_small</item>
    </style>

    <style name="FontWhiteNormal">
        <item name="android:textColor">@color/font_white</item>
        <item name="android:textSize">@dimen/font_normal</item>
    </style>

    <style name="FontWhiteBig">
        <item name="android:textColor">@color/font_white</item>
        <item name="android:textSize">@dimen/font_big</item>
    </style>

    <style name="FontWhiteHuge">
        <item name="android:textColor">@color/font_white</item>
        <item name="android:textSize">@dimen/font_huge</item>
    </style>

    <!-- 灰色字体 -->
    <style name="FontGraySmall">
        <item name="android:textColor">@color/font_gray</item>
        <item name="android:textSize">@dimen/font_small</item>
    </style>

    <style name="FontGrayNormal">
        <item name="android:textColor">@color/font_gray</item>
        <item name="android:textSize">@dimen/font_normal</item>
    </style>

    <style name="FontGrayBig">
        <item name="android:textColor">@color/font_gray</item>
        <item name="android:textSize">@dimen/font_big</item>
    </style>

    <style name="FontGrayHuge">
        <item name="android:textColor">@color/font_gray</item>
        <item name="android:textSize">@dimen/font_huge</item>
    </style>

    <!-- 主题色字体 -->
    <style name="FontPrimarySmall">
        <item name="android:textColor">@color/font_primary</item>
        <item name="android:textSize">@dimen/font_small</item>
    </style>

    <style name="FontPrimaryNormal">
        <item name="android:textColor">@color/font_primary</item>
        <item name="android:textSize">@dimen/font_normal</item>
    </style>

    <style name="FontPrimaryBig">
        <item name="android:textColor">@color/font_primary</item>
        <item name="android:textSize">@dimen/font_big</item>
    </style>

    <style name="FontPrimaryHuge">
        <item name="android:textColor">@color/font_primary</item>
        <item name="android:textSize">@dimen/font_huge</item>
    </style>

</resources>